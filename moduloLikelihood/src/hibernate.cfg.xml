<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/metanalise?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root123</property>
    <property name="hibernate.current_session_context_class">jta</property>
    <mapping resource="mapeamento/Estudoindividual.hbm.xml"/>
    <mapping resource="mapeamento/Metanaliseestudoindividual.hbm.xml"/>
    <mapping resource="mapeamento/Estudoglobal.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
